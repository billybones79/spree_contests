<%= render 'spree/admin/shared/sub_menu/configuration' %>

<% content_for :page_title do %>
    <%= "Nouveau concours" %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_store_concours), spree.admin_contests_path, :icon => 'arrow-left' %>
    </li>
<% end %>

<%= form_for [:admin, @contest] do |f| %>

    <%= render :partial => 'form', :locals => { :f => f } %>

    <fieldset class="no-border-top">
      <br>
      <br>

      <div class="filter-actions actions" data-hook="buttons">
        <%= button Spree.t(:create), 'ok' %>
      </div>
    </fieldset>

<% end %>
